<%- include('../../partials/head.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10 ">
            <div class="card card-body text-center">
              <h5 class="my-3">Change Password</h5>
               <div class="row " style="margin: auto;">
                <form action="/auth/change-Password" method="POST"> 
                

                    <div class="form-group">
                        <label htmlFor="password">Old Password: </label>
                        <input
                          type="password"
                          class="form-control"
                          placeholder="Enter Your Password"
                          name="oldpassword"
                          id="oldpassword"
          
                        />
                        
                      </div>

                      <div class="form-group">
                        <label htmlFor="newpassword">New Password: </label>
                        <input
                          type="password"
                          class="form-control "
                          placeholder="Enter Your new Password"
                          name="newpassword"
                          id="newpassword"
          
                        />
                        
                      </div>

                      <div class="form-group">
                        <label htmlFor="connewpassword"> Confirm New Password: </label>
                        <input
                          type="password"
                          class="form-control "
                          placeholder="Enter Your new Password"
                          name="connewpassword"
                          id="connewpassword"
          
                        />
                    
                      </div>
        
                  
                    <button class="btn btn-primary my-3 d-block form-control" type="submit">Change password</button>
                  </form>

               </div>
            </div>
        </div>
       

</div>

</div>
<%- include('../../partials/footer.ejs') %>

</body>
</html>

