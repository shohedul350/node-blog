<%- include('../../partials/head.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10 ">
            <div class="card card-body">
              <h5 class="my-3">My recent comments</h5>
                <div class="mt-3" id="comment-holder">
                    <% if (comments.length == 0) { %>
                        <p class="text-center text-muted">There is no coment</p>
                        <% } else{ %>

                                <% for(let comment of comments.reverse()) {%>
                                    <div class="media border my-3 ">
                                    <img src="<%= comment.user.profilePic %>"
                                    class="rounded-cricle mx-3 my-3"
                                    style="width: 40px;">
                                    <div class="media-body my-3">
                                        <p class="text-muted">
                                            <a href="/explorer/<%= comment.post._id %>" style="color: black;">
                                               On post <%= comment.post.tittle %>
                                               </a>
                                           Comment By <a href="/author/<%=comment.user._id %>"><%= comment.user.username %></a>,
                                          <%=  moment(comment.createdAt) %>

                                        </p> 
                                    <p> <%= comment.body %></p>
                                    <div class="" name="replies">
                                        <% if(comment.replies.length > 0){ %>
                                       <% for(let reply of comment.replies) {%>
                                           <div class="media my-1">
                                               
                                               <img src="<%= reply.user.profilePic %>"
                                               class="align-self-start rounded-cricle mx-3 my-3 "
                                               style="width: 40px;">
                                               <div class="media-body mt-3">
                                                <p class="text-muted">
                                                   Reply By <a href="/author/<%=reply.user._id %>"><%= reply.user.username %></a>,
                                                  <%=  moment(reply.createdAt) %>
        
                                                </p> 
                                                      <p><%= reply.body %></p>
                                               </div>
                                           </div>
                                       <% }%>  
                                   <% }%>
                                </div>
                                   <div class="my-3">
                                    <input type="text"
                                     class="form-control rounded-pill"
                                     name="Reply"
                                      placeholder="Press Enter to reply"
                                      data-comment="<%= comment._id %>"/>
                                </div>
                                 </div>
                                  
                                   
                                    </div>

                                <% } %> 
                        
                                    
                                <% } %>

                       

                         
    
            </div>

               </div>
            </div>
        
       

</div>

</div>
<%- include('../../partials/footer.ejs') %>
<script src="/scripts/comments.js"></script>

</body>
</html>

