<%- include('../partials/head.ejs') %>
<div class="container card default-height">
  

              <div class="card-body">
                  <h5>Search Result For- <%= searchTerm %> </h5>
               <% if(posts.length==0){ %>
      <p class="text-center text-muted my-5">Nothing Found</p>
               <%} else{%>
                <% for (let post of posts) { %>
                          <div class="card">
                            <a href="/explorer/<%= post._id %>" style="color: black;">
                                <h5><%= post.tittle %></h5>
                                <p class=""><%= truncate(post.body) %></p>
                                </a>
                          </div>
                    <%}%>
                <%}%>
              </div>
              <div class="card-footer">
                <% if(totalPage > 1 ) { %>
                  <nav>
                    <ul class="pagination">
                      <li class="page-item <%= currentPage ==1 ? 'disable' : ''%> ">
 
                        <a class="page-link" href="<%= `/search?term=${term}&page=${currentPage-1}`%>" >Previous</a>
                      </li>
                      <% for ( let i=1; i<= totalPage; i++){ %>
                        <li class="page-item <%= currentPage ==i ? 'active' : ''%> ">
                            <a class="page-link" href="<%= `/search?term=${term}&page=${i}`%>" ><%= i %></a>
                          </li>
 
                      <% } %>


                      <li class="page-item <%= currentPage == totalPage ? 'disable' : ''%> ">
                        <a class="page-link" href="<%=`/search?term=${term}&page=${currentPage+1}`%>" >Next</a>
                      </li>
                  
                    </ul>
                  </nav>
                <% } %>
              </div>
</div>
<%- include('../partials/footer.ejs') %>
<script src="/scripts/script.js"></script>
</body>
</html>